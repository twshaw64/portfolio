<Window x:Class="resTest.Replay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:resTest"
        mc:Ignorable="d"
        Title="Replay" Height="800" Width="1200">
    <Grid>
        <Image x:Name="Board_png" Source="Board.png" Stretch="Fill"/>
        <Image x:Name="btnPlay" Margin="496,315,496,0" Source="PlayYellow.png" Stretch="None" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image x:Name="btnExit" Margin="496,455,496,0" Source="ExitYellow.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Image x:Name="OptionsYellow_png" Margin="496,385,496,0" Source="OptionsYellow.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Image x:Name="Play_Again_png" Margin="0,-4,0,275" Source="Play Again.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="68" Width="944"/>

    </Grid>
</Window>
